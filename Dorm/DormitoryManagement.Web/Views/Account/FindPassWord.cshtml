@using MyFramework.Domain
@using MyFramework.Web
@{
    Layout = "~/Views/Shared/_Logout.cshtml";
}
  
@using (Html.BeginForm("FindPassWord", "Account", FormMethod.Post, new {id = FrameworkKeys.AccountForm}))
{
    <div class="top_b">
        找回密码</div>
    if (ViewData.ContainsKey(FrameworkKeys.Notification))
    {
        object message = ViewData[FrameworkKeys.Notification];
        if ((string) message == "您的密码已经发送到您的邮箱，请注意查收！")
        {
            <div class="alert alert-success" id="FindPassWord-Notification">
                @message
            </div>
        }
        else
        {
            <div class="alert alert-danger" id="FindPassWord-Notification">
                @message
            </div>
        }
    }
    <div class="cnt_b">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon input-sm">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.TextBox(FrameworkKeys.UserName, "", new {placeholder = "请输入用户名", @class = "form-control input-sm"})
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon input-sm">
                    <i class="glyphicon glyphicon-envelope"></i>
                </span>
                @Html.TextBox(FrameworkKeys.Email, "", new {placeholder = "请输入邮箱", @class = "form-control input-sm"})
            </div>
        </div>
                     
    </div>
    <div class="btm_b clearfix">
        <button class="btn btn-primary pull-right" type="submit">
            确认找回</button>
         
        @Html.Button("返回登陆界面", Url.Action("LogOn"), ButtonClass.Default)
        
    </div>
}