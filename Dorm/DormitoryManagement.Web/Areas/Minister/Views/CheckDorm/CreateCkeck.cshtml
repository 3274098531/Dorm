@using DormitoryManagement.Domain
@using MyFramework.Domain
@using MyFramework.Web
@using MyFramework.Web.HtmlTags
@model DormitoryManagement.Domain.Check

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb">
    检查卫生管理/添加 
</div>


@using (Html.BeginForm("Create", "CheckDorm", FormMethod.Post, new {data_pjax="",id = FrameworkKeys.FormId}))
{
    @Html.InputText("名称", Html.DropDownList(Keys.Inspection,null,"----请选择----"))
    @Html.InputText("宿舍楼", Html.DropDownList(Keys.Dorm, null, "---请选择---"))
    @Html.InputText("房间", Html.DropDownList(Keys.Room, null, "---请选择---"))
    @Html.Submit(Html.Button("返回", Url.Action("Index")))
}
 
<script type="text/javascript"> 
    SelectRoomFormDorm(); 
</script>
@Html.FormValidate(FrameworkKeys.FormId,
    Rule.Tag(Keys.Inspection).required(),
    Rule.Tag(Keys.Room).required(), 
    Rule.Tag(Keys.Dorm).required())