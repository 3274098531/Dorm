@using DormitoryManagement.Domain
@using MyFramework.Domain
@using MyFramework.Web
@using MyFramework.Web.HtmlTags
@model DormitoryManagement.Domain.Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit";
}
<div class="breadcrumb">
    房间管理/编辑  
</div> 
 
@using (Html.BeginForm("Edit", "Room", FormMethod.Post, new {data_pjax = "", id = FrameworkKeys.FormId}))
{
    @Html.InputText("宿舍", Html.DropDownList(Keys.Dorm, null, "---请选择---"))
    @Html.InputText("学院", Html.DropDownList(Keys.Academy, null, "---请选择---"))
    @Html.InputText("名称", Html.TextBox(Keys.Name))
    @Html.InputText("最大人数", Html.TextBox(Keys.MaxBedNum))
    @Html.Submit(Html.Button("返回", Url.Action("Index"),ButtonClass.Default))
}@Html.FormValidate(FrameworkKeys.FormId,
     Rule.Tag(Keys.Dorm).required(),
     Rule.Tag(Keys.Academy).required(),
     Rule.Tag(Keys.Name).required(),
     Rule.Tag(Keys.MaxBedNum).required())