@using DormitoryManagement.Domain
@using MyFramework.Domain
@using MyFramework.Web
@using MyFramework.Web.HtmlTags
@model DormitoryManagement.Domain.Class

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}
 
<div class="breadcrumb">
    班级管理/添加
</div> 
@using (Html.BeginForm("Create", "Class", FormMethod.Post, new {data_pjax = "", id = FrameworkKeys.FormId}))
{
    @Html.InputText("学院", Html.DropDownList(Keys.Academy, null, "---请选择---"))

    @Html.InputText("名称", Html.TextBox(Keys.Name))
    @Html.Submit(Html.Button("返回", Url.Action("Index"), ButtonClass.Default))
}@Html.FormValidate(FrameworkKeys.FormId,
     Rule.Tag(Keys.Academy).required(),
     Rule.Tag(Keys.Name).required())